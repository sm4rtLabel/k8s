kubectl apply -f https://raw.githubusercontent.com/rancher/local-path-provisioner/master/deploy/local-path-storage.yaml

helm install my-ingress ingress-nginx/ingress-nginx   --namespace ingress-nginx   --set controller.service.type=ClusterIP   --set controller.hostNetwork=true   --set controller.admissionWebhooks.enabled=false

helm install traefik traefik/traefik   --namespace traefik   --set deployment.replicas=1   --set providers.kubernetesIngress.enabled=true   --set ports.web.hostPort=80   --set ports.websecure.hostPort=443   --set service.type=ClusterIP
